@{
    ViewBag.Title = "员工管理";

    var genders = new[] { new { name = "未定义", value="0" }, new { name = "男", value = "1" }, new { name = "女", value = "2" },};
    var genderItems = genders.Select(x =>
        new SelectListItem() { Text = x.name, Value = x.value}).ToList();

    var status = new[] { new { name = "未关注", value = "4" }, new { name = "已关注", value = "1" }, new { name = "已冻结", value = "2" }, };
    var statusItems = status.Select(x =>
        new SelectListItem() { Text = x.name, Value = x.value }).ToList();
}
@using Ruico.WebHost
@model Ruico.Dto.Hr.MemberDTO
<div id="content-header">
    <h1>员工管理</h1>
</div>
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home", new { area = "" }, null)" title="返回首页" class="tip-bottom"><i class="icon-home"></i> 首页</a>
    <a href="@Url.Action("Index")">员工管理</a>
</div>
<div class="container-fluid">

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>添加 / 编辑员工</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Ajax.BeginForm("EditMember", new { id = Model.Id }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "ajaxRequestSuccess" }, new { @class = "form-horizontal" }))
                    {

                        <div class="control-group">
                            <label class="control-label">员工编号</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Userid, new {placeholder = "员工编号", @class = "input-xlarge"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Name, new {placeholder = "名称", @class = "input-small"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">微信号</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.WeixinId, new {placeholder = "微信号", @class = "input-xlarge"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">性别</label>
                            <div class="controls">
                                @Html.RadioButtonFor(x => x.Gender, genderItems, Model.Gender.ToString())
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">职位</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Position, new { placeholder = "职位", @class = "input-small" })
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">手机</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Mobile, new { placeholder = "手机", @class = "input-small" })
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">邮箱</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Email, new {placeholder = "邮箱", @class = "input-small"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">状态</label>
                            <div class="controls">
                                @Html.RadioButtonFor(x => x.Status, statusItems, Model.Status.ToString())
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">头像</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Avatar, new { placeholder = "头像", @class = "input-small" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>