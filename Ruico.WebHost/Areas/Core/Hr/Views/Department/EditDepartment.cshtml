@{
    ViewBag.Title = "部门管理";
}
@model Ruico.Dto.Hr.DepartmentDTO
<div id="content-header">
    <h1>部门管理</h1>
</div>
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home", new { area = "" }, null)" title="返回首页" class="tip-bottom"><i class="icon-home"></i> 首页</a>
    <a href="@Url.Action("Index")">部门管理</a>
</div>
<div class="container-fluid">

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>添加 / 编辑部门</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Ajax.BeginForm("EditDepartment", new {id = Model.Id}, new AjaxOptions {HttpMethod = "Post", OnSuccess = "ajaxRequestSuccess"}, new {@class = "form-horizontal"}))
                    {
                        <div class="control-group">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Name, new {placeholder = "名称", @class = "input-small"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">部门Id</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.DepartmentId, new {placeholder = "部门Id", @class = "input-xlarge"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">上级部门Id</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ParentId, new {placeholder = "上级部门Id", @class = "input-xlarge"})
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">排序</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.SortOrder, new {placeholder = "排序", @class = "input-small"})
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>