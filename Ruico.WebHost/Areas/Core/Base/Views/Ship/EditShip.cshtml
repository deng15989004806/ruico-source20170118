@{
    ViewBag.Title = "船舶管理";
}
@using Ruico.Dto.Base
@model Ruico.Dto.Base.ShipDTO
<div id="content-header">
    <h1>船舶管理</h1>
</div>
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home", new { area = "" }, null)" title="返回首页" class="tip-bottom"><i class="icon-home"></i> 首页</a>
    <a href="@Url.Action("Index")">船舶管理</a>
</div>
<div class="container-fluid">

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>添加 / 编辑船舶</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Ajax.BeginForm("EditShip", new { id = Model.Id }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "ajaxRequestSuccess" }, new { @class = "form-horizontal" }))
                    {
                        <div class="control-group">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Name, new { placeholder = "名称", @class = "input-small"  })
                            </div>
                        </div>
                        
                        <div class="control-group">
                            <label class="control-label">曾用名</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.FormerName, new { placeholder = "曾用名", @class = "input-small" })
                            </div>
                        </div>
                        
                        <div class="control-group">
                            <label class="control-label">描述</label>
                            <div class="controls">
                                @Html.TextAreaFor(x => x.Description, new { placeholder = "描述", @class = "input-xxlarge" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>