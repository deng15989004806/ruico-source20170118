@using Ruico.WebHost
@model IList<Ruico.Dto.System.OperateRecordDTO>
@{
    ViewBag.Title = "操作日志";
    var sn = ViewBag.Sn;
}

<div class="container-fluid">

    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="icon-align-justify"></i>
            </span>
            <h5>操作日志查询</h5>
        </div>
        <div class="widget-content">

            <div class="row-fluid">
                <div class="span12">
                    @using (Ajax.BeginForm("SearchLog", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "ajaxRequestSuccess" }, new { @class = "form-inline" }))
                    {
                        <section>
                            <input type="text" name="sn" id="sn" class="input-xlarge" placeholder="单据编号" value="@sn">&nbsp; &nbsp;
                            <button type="submit" class="btn btn-primary">查询</button>&nbsp; &nbsp;
                        </section>
                    }
                </div>
            </div>
            <br/>
            <div class="row-fluid">
                <div class="span12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="22%">单据编号</th>
                                <th width="15%">操作</th>
                                <th width="30%">操作明细</th>
                                <th width="13%">操作时间</th>
                                <th width="10%">操作人</th>
                                <th width="12%">IP地址</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Sn</td>
                                    <td>@item.Operation</td>
                                    <td>@item.Message</td>
                                    <td>@item.OperateTime.Display()</td>
                                    <td>@item.OperatorName</td>
                                    <td>@item.Ip</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

        </div>

</div>

