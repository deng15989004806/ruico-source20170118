@using Ruico.Infrastructure.Utility.Helper
@using Ruico.WebHost
@model IList<Ruico.Dto.System.OperateRecordDTO>
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    ViewBag.Title = "操作日志";
    var sn = ViewBag.Sn as string;
    var g = Guid.Empty;
    var showSn = sn.NotNullOrBlank() && !Guid.TryParse(sn, out g);
}
<div>
        <table class="table table-bordered table-striped" style="margin: 0">
            <thead>
                <tr>
                    @if (showSn)
                    {
                        <th width="20%">单据编号</th>
                        <th width="15%">操作</th>
                        <th width="30%">操作明细</th>
                        <th width="13%">操作时间</th>
                        <th width="10%">操作人</th>
                        <th width="12%">IP地址</th>
                    }
                    else
                    {
                        <th width="20%">操作</th>
                        <th width="35%">操作明细</th>
                        <th width="15%">操作时间</th>
                        <th width="15%">操作人</th>
                        <th width="15%">IP地址</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>@if (showSn)
                        {
                            <td>@item.Sn</td>
                        }
                        <td>@item.Operation</td>
                        <td>@Html.Raw(item.Message.HtmlLine())</td>
                        <td>@item.OperateTime.Display()</td>
                        <td>@item.OperatorName</td>
                        <td>@item.Ip</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
