@{
    ViewBag.Title = "用户管理";
    var groupName = ViewBag.GroupName;
    var isEdit = Model.Id != Guid.Empty;
}
@model Ruico.Dto.UserSystem.UserDTO
<div id="content-header">
    <h1>用户管理</h1>
</div>
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home", new { area = "" }, null)" title="返回首页" class="tip-bottom"><i class="icon-home"></i> 首页</a>
    <a href="@Url.Action("Index")">用户管理</a>
</div>
<div class="container-fluid">

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>添加 / 编辑用户</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Ajax.BeginForm("EditUser", new { id = Model.Id }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "ajaxRequestSuccess" }, new { @class = "form-horizontal" }))
                    {
                        <div class="control-group">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Name, new { placeholder = "名称" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">登录名</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.LoginName, new { placeholder = "用户的登录名" })
                            </div>
                        </div>
                        <div class="control-group" style="display: @(isEdit?"none":"block")">
                            <label class="control-label">密码</label>
                            <div class="controls">
                                @Html.PasswordFor(x => x.LoginPwd, new { placeholder = "用户的登录密码" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">邮箱地址</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Email, new { placeholder = "用户的邮箱地址" })
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>