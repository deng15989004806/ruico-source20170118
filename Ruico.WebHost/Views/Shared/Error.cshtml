@{
    Layout = null;
}
@model HandleErrorInfo
@{
    var statusCode = HttpStatusCode.InternalServerError;
    if (ViewBag.StatusCode != null)
    {
        statusCode = (HttpStatusCode)ViewBag.StatusCode;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>错误</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="/Content/error.css" />
    <script src="/Scripts/jquery-1.7.2.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <div id="content">

        <div class="container">


            <div class="row">

                <div class="span12">

                    <div class="error-container">

                        <h1>Oops!</h1>

                        <h2>@Convert.ToInt32(statusCode) @statusCode</h2>

                        <div class="error-details">
                            <p>Sorry, an error has occured, Requested page @statusCode.ToString().ToLower()!</p>
                            <div class="span3"></div>
                            <div class=" span5 alert alert-info alert-block">
                                <button class="close" data-dismiss="alert">×</button>
                                <strong>Info:</strong> <br />
                                @if (Model != null)
                                {
                                    <p>
                                        @Model.Exception.GetType().Name thrown in/@Model.ControllerName/@Model.ActionName
                                </p>
                                    <p>Error Details:<br/>
                                @Model.Exception.Message.Replace("Ruico.WebHost.Areas.", "")</p>
                                }
                            </div>
                        </div> <!-- /error-details -->

                        <div class="error-actions">

                        </div> <!-- /error-actions -->

                    </div> <!-- /.error-container -->


                </div> <!-- /.span12 -->

            </div> <!-- /.row -->

        </div> <!-- /.container -->

    </div> <!-- /#content -->

    
    <div id="footer">

        <div class="container">

            <div class="row">

            </div> <!-- /row -->

        </div> <!-- /container -->

    </div> <!-- /#footer -->


</body>
</html>
